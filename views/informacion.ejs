    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <title>Criptomonedas</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand mx-5" href="/">DB Web3</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">            
            <li class="nav-item">
              <a class="nav-link" href="/views/caballos.ejs">DB IA</a>         
            
            <li class="nav-item">
              <li class="nav-item">
                <a class="nav-link" href="/views/patrulla.ejs">DB Web3</a>
            </li>
            </ul><br>
            <form class="txt-end form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
            </form>
          </div>
        </nav>
        <div class="container mt-4">
          <div class="card border-secondary">
              <div class="card-header">Nuevo Registro de Informacion Cripto</div>
              <div class="card-body">
                  <form action="/savej" method="POST" enctype="application/x-www-form-urlencoded">
                      <div class="form-column">
                          <label for="empresa" class="form-label">Empresa</label>
                          <input type="text" name="empresa">
                          <label for="sector" class="form-label">Sector</label>
                          <input type="text" name="sector">
                          <label for="url" class="form-label">Url</label>
                          <input type="text" name="url">
                          <label for="explicacion" class="form-label">Explicacion</label>
                          <input type="text" name="explicacion">
                      </div>
                      <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                      <a href="/views/informacion.ejs" class="btn btn-secondary">Cancelar</a>
                  </form>                
              </div>
          </div>
      </div>
        <div class="container mt-5">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Empresa</th>
                  <th scope="col">Sector</th>
                  <th scope="col">Explicación</th>
                  <th scope="col">Url</th>
                  <th scope="col">Valoración</th>
                </tr>
              </thead>
              <tbody>
                <% results.forEach((results) => { %>                
                <tr>
                  <td><%= results.empresa %></td>
                  <td><%= results.sector %></td>
                  <td><%= results.explicacion %></td>
                  <td><a href="<%= results.url %>" target="_blank" class="btn btn-primary">Ir</a></td>                  
                  <td><!-- nueva columna -->
                    <div class="valoracion">
                      <i class='bx bxs-star' ></i>
                      <i class='bx bxs-star' ></i>
                      <i class='bx bxs-star' ></i>
                      <i class='bx bxs-star' ></i>
                      <i class='bx bxs-star' ></i>
                    </div>
                  </td> 
                  <td>                     
                    <a href="/edit/<%= results.id_informacion %>" class="btn btn-outline-info">Editar</a>                  
                  </td>
                </tr>               
               <% }) %>  
              </tbody>
            </table>
          </div>

    
  
    <footer class="bg-dark py-3">
      <p class="text-center text-white">&copy; DB Web3</p>
    </footer>
