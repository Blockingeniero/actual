        <% if (curinformacion) { %>
        <div class="container mt-4">
          <div class="card border-secondary">
              <div class="card-header">Editar Registro</div>
              <div class="card-body">
                  <form action="/updatej" method="POST" enctype="application/x-www-form-urlencoded">
                      <input id="idForm" name="idForm" value="<%= curinformacion.id_informacion %>" hidden>
                      <div class="form-column">
                          <label for="empresa" class="form-label">empresa</label>
                          <input type="text" name="empresa" value="<%= curinformacion.empresa %>">
                          <label for="sector" class="form-label">sector</label>
                          <input type="text" name="sector" value="<%= curinformacion.sector %>">
                          <label for="url" class="form-label">url</label>
                          <input type="text" name="url" value="<%= curinformacion.url %>">
                          <label for="explicacion" class="form-label">Explicacion</label>
                          <input type="text" name="explicacion" value="<%= curinformacion.explicacion %>">
                          <label for="id_informacion" class="form-label">Id_informacion</label>
                          <input type="text" name="id_informacion" value="<%= curinformacion.id_informacion %>">
                      </div>
                      <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                      <a href="/views/informacion.ejs" class="btn btn-secondary">Cancelar</a>
                  </form>                
              </div>
          </div>
        </div>     
        <% } %>
    
  
